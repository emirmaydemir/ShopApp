<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/product_detailll"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"
        ></ImageView>
    <TextView
        android:id="@+id/pro_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_detailll"
        android:text="Ürün ismi"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25dp"></TextView>
    <TextView
        android:id="@+id/pro_detail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_detail_name"
        android:text="Ürün bilgisi"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="35dp"></TextView>
    <TextView
        android:id="@+id/pro_detail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_detail_des"
        android:text="Ürün fiyatı"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="35dp"></TextView>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_gravity="center"
        app:textSize="10dp"
        app:initialNumber="1"
        app:finalNumber="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pro_detail_price"
        android:layout_marginTop="40dp">
    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
    <Button
        android:id="@+id/add_tobasket"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/buton"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Sepete Ekle"
        android:textColor="@color/white"
        android:textSize="15dp">
    </Button>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="35dp">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="36dp"
        android:background="@drawable/profile"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        >
    </ImageView>

    <EditText
        android:background="@drawable/txt_btn_style"
        android:id="@+id/detail_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="Yorum yapmak için "
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        >
    </EditText>
    <Button
        android:id="@+id/detail_btn"
        android:background="@drawable/txt_btn_style"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Gönder"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
    </Button>
</LinearLayout>

<TextView
    android:id="@+id/yorumlar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/detail_comment"
    android:text="Yorumlar"
    android:layout_marginTop="50dp"
    android:textSize="30dp"
    android:textAlignment="center"
    android:textStyle="bold"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/yorumlar"
        >
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>
    </ScrollView>
</LinearLayout>