<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_namee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün İsmi"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"></TextView>
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/product_imagee"
            android:layout_height="200dp"
            android:layout_below="@id/product_namee"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"></ImageView>
        <TextView
            android:id="@+id/product_pricee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_imagee"
            android:text="Ürünün Fiyatı"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"></TextView>
        <TextView
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_pricee"
            android:layout_marginTop="2dp"
            android:text="Ürün Açıklaması"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>