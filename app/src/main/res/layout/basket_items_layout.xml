<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/input">
        <ImageView
            android:id="@+id/image11"
            android:layout_width="75dp"
            android:scaleType="fitCenter"
            android:layout_height="75dp"
            android:padding="9dp"></ImageView>
        <TextView
            android:id="@+id/basket_pro_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün ismi"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image11"
            android:textColor="@color/black"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/basket_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Ürün fiyatı"
            android:layout_toEndOf="@+id/image11"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_below="@+id/basket_pro_name"
            android:textColor="@color/black"
            >
        </TextView>

        <TextView
            android:id="@+id/basket_pro_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:text="Ürün miktarı"
            android:textColor="@color/black"
            android:textSize="17dp"
           ></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>